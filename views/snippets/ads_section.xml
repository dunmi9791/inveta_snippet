<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="ads_section" name="Ads Section">
            <section class="property-agents border-none company-visible">
                <div class="oe_structure inspired-section">
                    <div class="container">
                        <div class="row">


                            <!-- First Column for YouTube Video -->
                            <div class="col-md-6 align-self-stretch video-container">
                                <iframe width="100%" height="315" src="https://www.youtube.com/embed/cKUTHcWhHGo"
                                        frameborder="0"
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                        allowfullscreen="allowfullscreen"></iframe>

                            </div>


                            <!-- Second Column for Text and Button -->
                            <div class="col-md-3">
                                <p>Invest And Trade Africa</p>
                                <a href="https://www.youtube.com/@investandtradeafrica" class="btn btn-primary">Watch
                                    Our Latest
                                    Episode
                                </a>
                            </div>

                            <!-- Third Column for Image Banner -->
                            <div class="col-md-3">
                                <a href="https://your-target-url.com">
                                    <img src="/inveta_snippet/static/src/img/adspace-01.png" alt="Banner Image"
                                         class="image-max-height banner-image"/>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </section>
        </template>
        <template id="improved_ads" name="Multiple Youtube Videos">
            <section class="property-agents border-none company-visible">

                    <div class="container inspired-section">
                        <div class="row">
                            <!-- First Column: YouTube Video -->
                            <div class="microwave_video_section">
                                <iframe class="big_video_frame" src="https://www.youtube.com/embed/cKUTHcWhHGo" frameborder="0"
                                        allow="accelerometer; autoplay;  picture-in-picture; fullscreen;"></iframe>
                                <div class="small_video_frames">
                                    <iframe class="small_video_frame" src="https://www.youtube.com/embed/rGbwGmwqKOQ" frameborder="0"
                                        allow="accelerometer; autoplay; picture-in-picture; fullscreen;"></iframe>
                                    <iframe class="small_video_frame" src="https://www.youtube.com/embed/fhzWcluMo24" frameborder="0"
                                        allow="accelerometer; autoplay;  picture-in-picture; fullscreen;"></iframe>
                                    <iframe class="small_video_frame" src="https://www.youtube.com/embed/teA26EHFuDg" frameborder="0"
                                        allow="accelerometer; autoplay;  picture-in-picture; fullscreen;"></iframe>
                                    <iframe class="small_video_frame" src="https://www.youtube.com/embed/3p0YL9KwIQI" frameborder="0"
                                        allow="accelerometer; autoplay;  picture-in-picture; fullscreen;"></iframe>
                                </div>
                               <a href="https://www.youtube.com/@investandtradeafrica" class="btn btn-primary">See More
                                </a>
                            </div>
                        </div>
                    </div>

            </section>
        </template>


    </data>
</odoo>